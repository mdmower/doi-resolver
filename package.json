{
  "name": "doi-resolver-chrome",
  "version": "6.0.2",
  "description": "An extension for Chrome to quickly resolve digital object identifiers to their web destinations",
  "private": true,
  "scripts": {
    "lint": "eslint src build",
    "format": "prettier --write \"build/**/*.js\" \"src/**/*.ts\" \"html/**/*.html\" \"src/**/*.scss\"",
    "build": "node build/dist.js",
    "build-debug": "node build/dist.js --debug",
    "update-csl": "node build/update-csl.js",
    "pkg": "node build/pkg.js",
    "clean": "node build/clean.js",
    "release": "npm run lint && npm run clean && npm run build && npm run pkg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdmower/doi-resolver-chrome.git"
  },
  "keywords": [
    "doi",
    "resolve",
    "resolver",
    "chrome",
    "extension"
  ],
  "author": "Matthew D. Mower <mdmower@cmphys.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mdmower/doi-resolver-chrome/issues"
  },
  "homepage": "https://github.com/mdmower/doi-resolver-chrome#readme",
  "dependencies": {
    "@jaames/iro": "^5.5.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.0",
    "citeproc": "^2.4.63"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.237",
    "@types/html-minifier": "^4.0.2",
    "@types/node": "^18.16.16",
    "@types/sortablejs": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@xmldom/xmldom": "^0.8.8",
    "archiver": "^5.3.1",
    "clean-css": "^5.3.2",
    "colors": "^1.4.0",
    "cross-fetch": "^3.1.6",
    "css-loader": "^6.8.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^46.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "html-minifier": "^4.0.0",
    "minimist": "^1.2.8",
    "postcss-loader": "^7.3.2",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0"
  }
}
