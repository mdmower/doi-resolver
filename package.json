{
  "name": "doi-resolver-chrome",
  "version": "6.0.3",
  "description": "An extension for Chrome to quickly resolve digital object identifiers to their web destinations",
  "private": true,
  "scripts": {
    "lint": "eslint src build",
    "format": "prettier --write \"build/**/*.js\" \"html/**/*.html\" \"src/**/*.(ts|scss|json)\"",
    "build": "node build/dist.js",
    "build-debug": "node build/dist.js --debug",
    "update-csl": "node build/update-csl.js",
    "pkg": "node build/pkg.js",
    "clean": "node build/clean.js",
    "release": "npm run lint && npm run clean && npm run build && npm run pkg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdmower/doi-resolver-chrome.git"
  },
  "keywords": [
    "doi",
    "resolve",
    "resolver",
    "chrome",
    "extension"
  ],
  "author": "Matthew D. Mower <mdmower@cmphys.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mdmower/doi-resolver-chrome/issues"
  },
  "homepage": "https://github.com/mdmower/doi-resolver-chrome#readme",
  "dependencies": {
    "@jaames/iro": "^5.5.2",
    "bootstrap": "^5.3.2",
    "citeproc": "^2.4.63"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@types/chrome": "^0.0.246",
    "@types/html-minifier": "^4.0.3",
    "@types/node": "^18.18.4",
    "@types/sortablejs": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@xmldom/xmldom": "^0.8.10",
    "archiver": "^6.0.1",
    "clean-css": "^5.3.2",
    "colors": "^1.4.0",
    "cross-fetch": "^4.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "html-minifier": "^4.0.0",
    "minimist": "^1.2.8",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2"
  }
}
