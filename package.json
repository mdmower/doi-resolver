{
  "name": "doi-resolver-chrome",
  "version": "7.0.0",
  "description": "A browser extension to quickly resolve digital object identifiers to their web destinations",
  "private": true,
  "scripts": {
    "lint": "eslint src build",
    "format": "prettier --write \"build/**/*.js\" \"html/**/*.html\" \"src/**/*.(ts|scss|json)\"",
    "build": "node build/dist.js",
    "build-debug": "node build/dist.js --debug",
    "update-csl": "node build/update-csl.js",
    "pkg": "node build/pkg.js",
    "clean": "node build/clean.js",
    "release": "npm run lint && npm run clean && npm run build && npm run pkg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdmower/doi-resolver-chrome.git"
  },
  "keywords": [
    "doi",
    "resolve",
    "resolver",
    "chrome",
    "extension"
  ],
  "author": "Matthew D. Mower <mdmower@cmphys.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mdmower/doi-resolver-chrome/issues"
  },
  "homepage": "https://github.com/mdmower/doi-resolver-chrome#readme",
  "dependencies": {
    "@jaames/iro": "^5.5.2",
    "bootstrap": "^5.3.3",
    "citeproc": "^2.4.63"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@types/chrome": "^0.0.263",
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^18.19.24",
    "@types/sortablejs": "^1.15.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@xmldom/xmldom": "^0.8.10",
    "archiver": "^7.0.1",
    "clean-css": "^5.3.3",
    "colors": "^1.4.0",
    "cross-fetch": "^4.0.0",
    "css-loader": "^6.10.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fast-deep-equal": "^3.1.3",
    "fs-extra": "^11.2.0",
    "html-minifier": "^4.0.0",
    "minimist": "^1.2.8",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.90.3",
    "webpack-merge": "^5.10.0"
  }
}
