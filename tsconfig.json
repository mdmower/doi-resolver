{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "importHelpers": true,
    "types": ["node", "chrome"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.js"]
}
